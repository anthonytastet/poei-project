pipeline {
    agent {
        label "jenkins_controller"
    }
    // tools {
    //     // maven "localMaven"
    //     // git "localGit"
    // }
    environment {
        NEXUS_VERSION = "nexus3"
        NEXUS_PROTOCOL = "http" 
        NEXUS_URL = "127.0.0.1:8081" // IP address and port number where Nexus is running
        NEXUS_REPOSITORY = "bookstore-releases/" // dedicated Maven repository created on Nexus GUI
        NEXUS_CREDENTIAL_ID = "nexus-credentials" // Nexus user ID created in Jenkins
    }
    stages {
        stage("Pull artifact from Nexus Repository") {
            steps {
                script {
                    sh script: 'su trainee curl -u admin:admin -o /tmp/bookstore-1.war "http://10.0.2.45:18081/repository/bookstore-releases/com/mycompany/myapp/bookstore/1/bookstore-1.war"'
                }
            }
        }
        stage("Push artifact to vm02") {
            steps {
                script {
                    sh script: 'scp /tmp/bookstore-1.war root@10.0.2.46:/home/trainee/bookstore-1.war'
                }
            }
        }
    }
}



